@model MailSender.Example.Models.WelcomeModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>CSS Template</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
    * {
      box-sizing: border-box;
    }

    body {
        width: 960px;
        height: 720px;
        font-family: Arial, Helvetica, sans-serif;
        background-image: url("https://cdn.pixabay.com/photo/2015/09/09/16/05/forest-931706_960_720.jpg");
        background-repeat: no-repeat;
        color:white;
    }

    header {
        text-align: center;
        font-size: 35px;
        color: white;
    }

        nav {
            float: left;
            width: 30%;
            height: 300px;
            background: black;
            opacity: 0.3;
            padding: 20px;
        }

    nav ul {
        list-style-type: none;
        padding: 0;
        color:snow;
    }

    article {
        float: left;
        padding: 20px;
        width: 70%;
        height: 300px;
    }

    footer {
        background-color: #777;
        opacity: 0.5;
        padding: 10px;
        text-align: center;
    }

    @@media (max-width: 600px) {
        nav, article {
            width: 100%;
            height: auto;
        }
    }
    </style>
</head>
<body>
    <header>
        <h2>@Model.Title</h2>
    </header>
    <section>
        <nav>
            <ul>
                <li>Razor</li>
                <li>C#</li>
                <li>HTML</li>
            </ul>
        </nav>

        <article>
            <p>@Model.Body</p>
        </article>
    </section>
</body>
</html>